{
  "name": "react-image-upload",
  "version": "2.0.1",
  "description": "react library for uploading images",
  "author": "chimdie",
  "license": "MIT",
  "repository": "chimdie/react-image-upload",
  "source": "src/index.tsx",
  "private": false,
  "type": "module",
  "keywords": [
    "react",
    "image",
    "upload"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "test": "echo \"No test specified\"",
    "lint": "npm run format && npm run lint:fix",
    "lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\""
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "gh-pages": "^2.2.0",
    "json": "^11.0.0",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^1.7.1"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^3.1.0"
  }
}
